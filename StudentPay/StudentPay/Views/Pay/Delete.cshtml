@model StudentPay.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<h1>Delete Payment</h1>

<h3>Are you sure you want to delete this payment?</h3>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pay_Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pay_Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PayDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PayAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PayAmount)
        </dd>
